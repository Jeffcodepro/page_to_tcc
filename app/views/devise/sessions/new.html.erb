<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-10 col-md-6 col-lg-5">
      <div class="card shadow-sm border-0 auth-card">
        <div class="card-body p-4">
          <div class="mb-3">
            <h1 class="h4 mb-1">Acesso</h1>
            <p class="text-muted mb-0">Entre com seu e-mail e senha.</p>
          </div>

          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="mb-3">
              <%= f.label :email, "E-mail", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email",
                    class: "form-control", placeholder: "seuemail@exemplo.com" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, "Senha", class: "form-label" %>
              <%= f.password_field :password, autocomplete: "current-password",
                    class: "form-control", placeholder: "••••••••" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="form-check mb-3">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, "Manter conectado", class: "form-check-label" %>
              </div>
            <% end %>

            <div class="d-grid gap-2">
              <%= f.submit "Entrar", class: "btn btn-dark" %>
            </div>
          <% end %>

          <div class="mt-3 d-flex justify-content-between small">
            <% if devise_mapping.recoverable? %>
              <%= link_to "Esqueci minha senha", new_user_password_path, class: "text-decoration-none" %>
            <% end %>
            <span class="text-muted">Ambiente demonstrativo</span>
          </div>
        </div>
      </div>

      <p class="text-center text-muted small mt-3 mb-0">
        © <%= Time.current.year %> • Sistema de demonstração
      </p>
    </div>
  </div>
</div>
